<form method="post" action="{{ path('acme_delete', {'id': acme.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ acme.id) }}">
    <button class="btn btn-danger">Delete</button>
</form>